{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",  // Set to "NodeNext" as required by moduleResolution
    "moduleResolution": "NodeNext",
    "outDir": "server/dist",
    "rootDir": "server/src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": true
  },
  "include": [
    "server/src/**/*"
  ],
  "exclude": [
    "server/dist/**/*",
    "client/**/*"
  ]
}